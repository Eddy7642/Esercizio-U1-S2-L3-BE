@model CinemaMVC.Models.Ticket

<h2>Nuovo Biglietto</h2>

<form asp-action="Create" method="post">
    <div class="form-group my-2">
        <label asp-for="Nome" class="my-1"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label asp-for="Cognome" class="my-1"></label>
        <input asp-for="Cognome" class="form-control" />
    </div>
    <div class="form-group my-2">
        <label asp-for="Sala" class="my-1"></label>
        <select asp-for="Sala" class="form-control">
            <option value="SALA NORD">SALA NORD</option>
            <option value="SALA EST">SALA EST</option>
            <option value="SALA SUD">SALA SUD</option>
        </select>
    </div>
    <div class="form-group my-2">
        <label asp-for="TipoBiglietto" class="my-1"></label>
        <select asp-for="TipoBiglietto" class="form-control">
            <option value="Intero">Intero</option>
            <option value="Ridotto">Ridotto</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary my-2">Salva</button>
</form>

<a href="/Biglietti" class="btn btn-secondary my-2">Annulla</a>
